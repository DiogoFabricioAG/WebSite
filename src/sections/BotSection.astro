import BoxLayout from "../layouts/BoxLayout.astro";
---

<section id="bot" class="">
  <BoxLayout>
    
    <div class="mx-auto mt-10">
      <!-- Chat Container -->
      <div class="border-2 border-white/30 bg-black/40 backdrop-blur-sm  overflow-hidden">
        <!-- Chat Header -->
        <div class="sticky top-0 z-10 bg-white/20 border-b border-white/20 px-4 sm:px-6 py-3 sm:py-4 backdrop-blur-sm">
          <div class="flex justify-between items-center gap-3">
            <div class="flex gap-3 items-center">
                <div class="relative">
                    <img src="/logo-portfolio.png" alt="Diogo" class="size-16" transition:name="portfolio-logo" />
                </div>
                <div>
                    <h3 class="font-bold text-lg">Diogo Bot</h3>
                    <p class="text-xs text-white/60">Respondiendo como Diogo Abregu</p>
                </div>
            </div>
          <div class="flex items-center gap-2">
            <button id="reset-convo" class="hidden sm:inline-flex px-3 py-1.5 text-xs border border-white/40 bg-white/10 hover:bg-white/20 transition" title="Nueva conversaciÃ³n">Nueva conversaciÃ³n</button>
            <a href="/" class="relative inline-block group" title="Volver al inicio">
              <div class="button-clean-dark flex items-center gap-2 px-3 py-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                <span class="text-sm font-medium hidden sm:inline">Volver</span>
              </div>
              <span class="shadow-box-dark"></span>
            </a>
          </div>
          </div>
        </div>

        <!-- Messages Area -->
        <div id="chat-messages" class="h-[60vh] sm:h-[500px] overflow-y-auto p-4 sm:p-6 space-y-4">
          <!-- Welcome Message -->
          <div class="flex items-start gap-3">
            <img src="/avatar.png" alt="Bot" class="w-8 h-8  flex-shrink-0" />
            <div class="bg-white/10 px-4 py-3 max-w-[85%] sm:max-w-md">
              <p class="text-sm">Â¡Hola! ðŸ‘‹ Soy un asistente virtual que responde como Diogo. PregÃºntame sobre mi experiencia, proyectos, habilidades o cualquier cosa que quieras saber.</p>
            </div>
          </div>
        </div>

        <!-- Input Area -->
        <div class="border-t border-white/20 p-3 sm:p-4 bg-black/20">
          <form id="chat-form" class="relative">
            <div class="bg-white/5 border border-white/20 focus-within:border-white/80 transition p-2 rounded-none">
              <textarea
                id="user-input"
                rows="1"
                placeholder="Escribe tu mensaje... (Enter para enviar, Shift+Enter para salto de lÃ­nea)"
                class="w-full bg-transparent text-sm leading-relaxed outline-none resize-none pr-12 pb-10 px-2 sm:px-3"
                autocomplete="off"
              ></textarea>
            </div>

            <!-- Send button bottom-right inside composer -->
            <button
              type="submit"
              id="send-btn"
              class="absolute bottom-3 right-3 h-9 w-9 flex items-center justify-center bg-white text-black hover:bg-white/90 transition disabled:opacity-50 disabled:cursor-not-allowed"
              title="Enviar"
            >
              <svg viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor" aria-hidden="true">
                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
              </svg>
              <span class="sr-only">Enviar</span>
            </button>
          </form>
          <p class="text-[10px] text-white/40 mt-2 text-center">Conectado a IA real con memoria de conversaciÃ³n.</p>
        </div>
      </div>
    </div>
  </BoxLayout>
</section>

<script is:inline>
  function initBot() {
    const chatForm = document.getElementById('chat-form');
    const userInput = document.getElementById('user-input');
    const sendBtn = document.getElementById('send-btn');
    const messagesContainer = document.getElementById('chat-messages');
    const resetBtn = document.getElementById('reset-convo');

    // Session management
    let sessionId = localStorage.getItem('bot-session-id') || null;
    const HISTORY_KEY = 'bot-chat-history';

    // Restore chat history
    try {
      const raw = localStorage.getItem(HISTORY_KEY);
      const history = raw ? JSON.parse(raw) : [];
      if (Array.isArray(history)) {
        history.forEach((m) => addMessage(m.text, !!m.isUser));
      }
    } catch {}

    async function getBotResponse(userMessage) {
      try {
        const response = await fetch('https://me-virtual.diogofabricio17.workers.dev/', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ 
            message: userMessage,
            ...(sessionId && { sessionId })
          })
        });

        if (!response.ok) {
          throw new Error('Error en la respuesta del servidor');
        }

        const data = await response.json();
        
        // Save session ID for future requests
        if (data.sessionId && !sessionId) {
          sessionId = data.sessionId;
          localStorage.setItem('bot-session-id', sessionId);
        }

        return data.response || data.message || "Lo siento, no pude procesar tu mensaje.";
      } catch (error) {
        console.error('Error al conectar con el bot:', error);
        return "Lo siento, hubo un error al conectar con el servidor. Por favor intenta de nuevo.";
      }
    }

    function addMessage(text, isUser = false) {
      const messageDiv = document.createElement('div');
      messageDiv.className = `flex items-start gap-3 ${isUser ? 'flex-row-reverse' : ''}`;
      
      const avatar = isUser 
        ? '<div class="w-8 h-8 bg-white text-black flex items-center justify-center flex-shrink-0"><span class="text-xs font-bold">TÃº</span></div>'
        : '<img src="/avatar.png" alt="Bot" class="w-8 h-8  flex-shrink-0" />';
      
      const bubbleClass = 'bg-white/10 max-w-[85%] sm:max-w-md';
      
      messageDiv.innerHTML = `
        ${avatar}
        <div class="${bubbleClass} px-4 py-3 max-w-md">
          <p class="text-sm">${text}</p>
        </div>
      `;
      
      messagesContainer.appendChild(messageDiv);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function showTypingIndicator() {
      const typingDiv = document.createElement('div');
      typingDiv.id = 'typing-indicator';
      typingDiv.className = 'flex items-start gap-3';
      typingDiv.innerHTML = `
        <img src="/avatar.png" alt="Bot" class="w-8 h-8  flex-shrink-0" />
        <div class="bg-white/10 px-4 py-3 max-w-[70%] sm:max-w-xs">
          <div class="flex gap-1">
            <div class="w-2 h-2 bg-white/60  animate-bounce" style="animation-delay: 0ms"></div>
            <div class="w-2 h-2 bg-white/60  animate-bounce" style="animation-delay: 150ms"></div>
            <div class="w-2 h-2 bg-white/60  animate-bounce" style="animation-delay: 300ms"></div>
          </div>
        </div>
      `;
      messagesContainer.appendChild(typingDiv);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function removeTypingIndicator() {
      const typingIndicator = document.getElementById('typing-indicator');
      if (typingIndicator) {
        typingIndicator.remove();
      }
    }

    chatForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const message = userInput.value.trim();
      if (!message) return;

      // Add user message
      addMessage(message, true);
      // Persist
      try {
        const raw = localStorage.getItem(HISTORY_KEY);
        const history = raw ? JSON.parse(raw) : [];
        history.push({ text: message, isUser: true });
        localStorage.setItem(HISTORY_KEY, JSON.stringify(history));
      } catch {}
      userInput.value = '';
      sendBtn.disabled = true;

      // Show typing indicator
      showTypingIndicator();

      // Get bot response from API
      const response = await getBotResponse(message);

      // Remove typing and add bot response
      removeTypingIndicator();
      addMessage(response, false);
      // Persist
      try {
        const raw = localStorage.getItem(HISTORY_KEY);
        const history = raw ? JSON.parse(raw) : [];
        history.push({ text: response, isUser: false });
        localStorage.setItem(HISTORY_KEY, JSON.stringify(history));
      } catch {}

      sendBtn.disabled = false;
      userInput.focus();
    });

    // Auto-resize textarea
    const autoResize = () => {
      if (!(userInput instanceof HTMLTextAreaElement)) return;
      userInput.style.height = 'auto';
      const max = 160; // px ~ 8-10 lines
      userInput.style.height = Math.min(userInput.scrollHeight, max) + 'px';
    };
    autoResize();
    userInput.addEventListener('input', autoResize);

    // Enter to send; Shift+Enter for newline
    userInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        chatForm.requestSubmit();
      }
    });

    // Reset conversation
    resetBtn?.addEventListener('click', () => {
      if (confirm('Â¿Quieres iniciar una nueva conversaciÃ³n? Se perderÃ¡ el historial actual.')) {
        localStorage.removeItem('bot-session-id');
        localStorage.removeItem(HISTORY_KEY);
        sessionId = null;
        messagesContainer.innerHTML = `
          <div class="flex items-start gap-3">
            <img src="/avatar.png" alt="Bot" class="w-8 h-8  flex-shrink-0" />
            <div class="bg-white/10 px-4 py-3 max-w-md">
              <p class="text-sm">Â¡Hola! ðŸ‘‹ Soy un asistente virtual que responde como Diogo. PregÃºntame sobre mi experiencia, proyectos, habilidades o cualquier cosa que quieras saber.</p>
            </div>
          </div>
        `;
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initBot);
  document.addEventListener('astro:after-swap', initBot);
</script>