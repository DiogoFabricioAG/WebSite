---

<section id="bot" class="">
  <BoxLayout>
    
    <div class="max-w-4xl mx-auto mt-10">
      <!-- Chat Container -->
      <div class="border-2 border-white/30 bg-black/40 backdrop-blur-sm  overflow-hidden">
        <!-- Chat Header -->
        <div class="bg-white/20 border-b border-white/20 px-6 py-4">
          <div class="flex justify-between items-center gap-3">
            <div class="flex gap-3 items-center">
                <div class="relative">
                    <img src="/logo-portfolio.png" alt="Diogo" class="size-16" transition:name="portfolio-logo" />
                </div>
                <div>
                    <h3 class="font-bold text-lg">Diogo Bot</h3>
                    <p class="text-xs text-white/60">Respondiendo como Diogo Abregu</p>
                </div>
            </div>
            <div>
                <a href="/" class="relative inline-block group" title="Volver al inicio">
                    <div class="button-clean-dark flex items-center gap-2 px-3 py-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        <span class="text-sm font-medium">Volver</span>
                    </div>
                    <span class="shadow-box-dark"></span>
                </a>
            </div>
